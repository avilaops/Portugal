# AVL Console - Environment Variables
# Copy this to .env and adjust values for your environment

# ========================================
# Server Configuration
# ========================================
AVL_CONSOLE_HOST=0.0.0.0
AVL_CONSOLE_PORT=3000
AVL_METRICS_PORT=9090
AVL_CONSOLE_DEBUG=false
RUST_LOG=info,avl_console=debug

# ========================================
# AvilaDB Configuration
# ========================================
AVILADB_ENDPOINT=http://localhost:8000
AVILADB_DATABASE=console_db
AVILADB_COLLECTION=vectors
AVILADB_API_KEY=your-aviladb-api-key-here
AVILADB_REGION=saopaulo-1
AVILADB_THROUGHPUT_UNITS=400

# ========================================
# AVL Auth Configuration
# ========================================
AVL_AUTH_ENDPOINT=http://localhost:8080
AVL_AUTH_CLIENT_ID=avl-console-client
AVL_AUTH_CLIENT_SECRET=your-auth-client-secret-here
AVL_AUTH_ENABLED=true
AVL_AUTH_JWT_SECRET=your-jwt-secret-minimum-32-characters-here

# ========================================
# AVL Telemetry Configuration
# ========================================
AVL_TELEMETRY_ENDPOINT=http://localhost:4317
AVL_TELEMETRY_ENABLED=true
AVL_SERVICE_NAME=avl-console
AVL_SERVICE_VERSION=0.3.0
AVL_SERVICE_ENVIRONMENT=production
AVL_SERVICE_REGION=saopaulo-1

# ========================================
# AI Backend Configuration
# ========================================
AI_BACKEND=pattern
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ========================================
# Feature Flags
# ========================================
ENABLE_AI_ASSISTANT=true
ENABLE_VECTOR_SEARCH=true
ENABLE_QUERY_SAFETY=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# ========================================
# Security Configuration
# ========================================
SESSION_SECRET=your-session-secret-minimum-32-characters-here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
RATE_LIMIT_TOKEN_BUCKET_SIZE=100000

# ========================================
# WebSocket Configuration
# ========================================
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30
WS_TIMEOUT=300

# ========================================
# Storage Configuration (opcional)
# ========================================
AVL_STORAGE_ENDPOINT=http://localhost:8001
AVL_STORAGE_BUCKET=avl-console-assets
AVL_STORAGE_REGION=saopaulo-1

# ========================================
# Gateway Configuration (opcional)
# ========================================
AVX_GATEWAY_ENDPOINT=http://localhost:8002
AVX_GATEWAY_API_KEY=your-gateway-api-key-here

# ========================================
# Monitoring (opcional)
# ========================================
PROMETHEUS_ENDPOINT=http://localhost:9091
GRAFANA_ENDPOINT=http://localhost:3001

# ========================================
# Cache Configuration (Redis opcional)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
CACHE_TTL_SECONDS=3600

# ========================================
# Development/Debug
# ========================================
DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true
PRETTY_LOGS=false
