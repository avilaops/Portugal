# Environment variables for Avila Analytics

# Server configuration
HOST=0.0.0.0
PORT=3000
RUST_LOG=info

# Storage backend (false = InMemory, true = AvilaDB)
USE_AVILADB=false

# AvilaDB configuration
AVILADB_ENDPOINT=http://localhost:8000
AVILADB_KEY=development-key
AVILADB_DATABASE=analytics
AVILADB_COLLECTION=events
AVILADB_THROUGHPUT=10

# Redis configuration (optional)
REDIS_URL=redis://localhost:6379

# API configuration
API_VERSION=v1
MAX_BATCH_SIZE=1000
MAX_QUERY_LIMIT=10000
DEFAULT_PAGE_SIZE=100

# Security
API_KEYS=dev-key-123,avila_prod_key_xyz

# CORS
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
